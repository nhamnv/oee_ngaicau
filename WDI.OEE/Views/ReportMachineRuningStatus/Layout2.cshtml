@model Common.ViewModels.DashboardViewModel

<div class="col-lg-12 col-sm-12">
    <!-- 3 ô đầu vào 1 dòng các ô còn lại vào 1 dòng để căn center-->
    <div class="row justify-content-center">
        @for (int i = 0; i < 3; i++)
        {
            @await Html.PartialAsync("_CardMachineStatus.cshtml", Model.LitStatusSummary[i])
        }
    </div>
    <div class="row justify-content-center">
        @for (int i = 3; i < Model.LitStatusSummary.Count; i++)
        {
            @await Html.PartialAsync("_CardMachineStatus.cshtml", Model.LitStatusSummary[i])
        }
    </div>
    <div class="row justify-content-center">
        <img src="~/images/pages/layout2_footer.jpg" style="width:100%;" />
    </div>
</div>
