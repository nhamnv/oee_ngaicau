<div class="col-lg-12 col-sm-12">
    <div id="divlistMachineRunningStatusDetail" class="row">
        @if (Model != null && Model.Count>0)
        {
            // Thiết bị lật dầm XF15 - Số 01
            var m = Model.FirstOrDefault();
            if(m== null)
            {
                m = Model?[0];
            }

            @await Html.PartialAsync("_MachineSingle.cshtml", m);
        }
    </div>
</div>

<script>
    function filterDataDetail() {
        var _Machine = $("#machine").val();
        var _MachineGroup = $("#machineGroup").val();
        var _MachineAssetGroup = ''; //$("#machineAssetGroup").val();
        var _MachineLocation = '';
        $.ajax({
            url: "/ReportMachineRuningStatus/FilterDataDetail",
            method: "POST",
            dataType: "json",
            data: { MachineID: _Machine, MachineGroupID: _MachineGroup, MachineLocationID: _MachineLocation, MachineAssetGroupID: _MachineAssetGroup },
            async: true,
            beforeSend: function () { },
            success: function (result) {
                //debugger;
                if (result && result.success === true) {
                    $("#divlistMachineRunningStatusDetail").html(result.html);
                }
                else
                    $("#divlistMachineRunningStatusDetail").html('');
            },
            error: function (err) {
                console.log(err);
            }
        });
    }

    $(document).ready(function () {
        $('#machineGroup').select2({
            placeholder: 'Nhóm máy'
        });
        $('#machineAssetGroup').select2({
            placeholder: 'Phân loại'
        });
        $('#machine').select2({
            placeholder: 'Máy'
        });
    });
</script>