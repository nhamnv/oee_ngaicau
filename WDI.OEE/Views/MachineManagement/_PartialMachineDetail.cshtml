@model Common.Data_Machine
@{
    //string _readonly_input = "";
}

<style>
    .bg-c-wcom-red {
        background-color:#D82F24;
    }
</style>

<div class="col-xl-12 col-md-12">
    <div class="card user-card-full">
        <div class="row m-l-0 m-r-0">
            <div class="col-sm-5 @* bg-c-wcom-red *@ bg-c-lite-green user-profile">
                <div class="card-block text-center text-white">
                    <div class="m-b-25">
                        <img class="img-radius" alt="Ảnh đại diện máy" style="width:100%;object-fit: contain;" src="~/images/machines/@Model.ImageUrl" />
                    </div>
                    <h6 class="f-w-600 text-uppercase">@Model.MachineName</h6>
                    @* <p>@Model.Model</p> *@
                    @* <i class="feather icon-edit m-t-10 f-16"></i> *@
                </div>
            </div>
            <div class="col-sm-7 j-content">
                <div class="card-block j-pro">
                    <!-- [Dòng thông tin 1] start -->
                    <h6 class="m-b-20 m-t-10 p-b-5 b-b-default f-w-600">Thông tin thiết bị</h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="MachineName">Thiết bị</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="MachineName" id="MachineName" placeholder="Thiết bị" value="@Model.MachineName">
                                    <span class="messages"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="MachineAssetCode">Mã tài sản</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="MachineAssetCode" id="MachineAssetCode" placeholder="Mã tài sản" value="@Model.MachineAssetCode">
                                    <span class="messages"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 1] end -->
                    <!-- [Dòng thông tin 2] start -->
                    <h6 class="m-b-20 m-t-10 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="Model">Model</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="Model" id="Model" placeholder="Model" value="@Model.Model">
                                    <span class="messages"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="SerialNo">Serial No</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="SerialNo" id="SerialNo" placeholder="Serial No" value="@Model.SerialNo">
                                    <span class="messages"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 2] end -->
                    <!-- [Dòng thông tin 3] start -->
                    <h6 class="m-b-20 m-t-10 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="AssetGroupName">Nhóm tài sản</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="AssetGroupName" id="AssetGroupName" placeholder="Nhóm tài sản" value="@Model.AssetGroupName">
                                    <span class="messages"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="MachineGroupName">Nhóm máy</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="MachineGroupName" id="MachineGroupName" placeholder="Nhóm máy" value="@Model.MachineGroupName">
                                    <span class="messages"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 3] end -->
                    <!-- [Dòng thông tin 4] start -->
                    <h6 class="m-b-20 m-t-10 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="AccountantCode">Mã kế toán</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="AccountantCode" id="AccountantCode" placeholder="Mã kế toán" value="@Model.AccountantCode">
                                    <span class="messages"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="BaseUnitName">Đơn vị tính</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="BaseUnitName" id="BaseUnitName" placeholder="Đơn vị tính" value="@Model.BaseUnitName">
                                    <span class="messages"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 4] end -->
                    <!-- [Dòng thông tin 5] start -->
                    <h6 class="m-b-20 m-t-10 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="ProviderName">Nhà cung cấp</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="ProviderName" id="ProviderName" placeholder="Nhà cung cấp" value="@Model.ProviderName">
                                    <span class="messages"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 5] end -->
                    <!-- [Dòng thông tin 6] start -->
                    <h6 class="m-b-20 m-t-10 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="MachineLocationName">Vị trí lắp đặt</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="MachineLocationName" id="MachineLocationName" placeholder="Vị trí lắp đặt" value="@Model.MachineLocationName">
                                    <span class="messages"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="FirstUseDate">Thời gian đi vào hoạt động</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="FirstUseDate" id="FirstUseDate" placeholder="Thời gian đi vào hoạt động" value="@Model.FirstUseDate">
                                    <span class="messages"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 6] end -->

                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                        @* <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook"><i class="feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter"><i class="feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram"><i class="feather icon-instagram instagram" aria-hidden="true"></i></a></li> *@
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>




